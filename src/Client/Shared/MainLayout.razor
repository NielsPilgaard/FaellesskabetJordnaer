@inherits LayoutComponentBase

<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <TopBar ToggleDrawer="@ToggleDrawer" />
    <SideBar Open="_isDrawerOpen" />
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
    <CookieBanner />
</MudLayout>
@code
{
    bool _isDrawerOpen = false;
    void ToggleDrawer() => _isDrawerOpen = !_isDrawerOpen;
}
