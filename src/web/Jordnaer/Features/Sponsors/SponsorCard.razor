@using Jordnaer.Shared
<MudLink Href="@Sponsor.Link" Target="_blank" Underline="Underline.None">
    <MudCard Elevation="5" Class="mt-5 card-hover" Style="max-width: 300px">
        <MudCardContent>
            <MudImage Fluid Src="@Sponsor.LogoUrl" />
            @if (!string.IsNullOrEmpty(Sponsor.Name))
            {
	            <MudText Typo="Typo.h5">@Sponsor.Name</MudText>
            }
            <MudText Class="mt-2" Typo="Typo.subtitle1">@Sponsor.Description</MudText>
        </MudCardContent>
    </MudCard>
</MudLink>
@code
{
    [Parameter]
    public required Sponsor Sponsor { get; set; }
}
