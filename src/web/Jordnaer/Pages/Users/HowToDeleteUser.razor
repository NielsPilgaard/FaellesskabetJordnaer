<MudGrid Justify="Justify.Center" Spacing="3">
  <MudPaper Elevation="3" Class="pa-8 mt-5" Style="text-align: center;">
    <MudText Typo="Typo.h5" Class="font-cherry-bomb-one" Style="@($"color: {Palette.YellowBackground}")">Slet Bruger</MudText>
        <MudText Typo="Typo.body1" Class="mt-3">
