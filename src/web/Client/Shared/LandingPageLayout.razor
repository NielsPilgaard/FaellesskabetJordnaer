@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Fixed="false" Elevation="0" Dense Style="@($"background: {JordnaerPalette.DimBackground.ColorLighten(0.1)}")">
        <MudSpacer />
        <ThemeProvider @bind-IsDarkMode="_isDarkMode" />
        <AuthorizeView>
            <Authorized>
                <TopBarProfileMenu @bind-IsDarkMode="_isDarkMode" />
            </Authorized>
            <NotAuthorized>
                <MudIconButton Title="Log ind" Icon="@Icons.Material.Filled.Login" Href="auth/login" Variant="Variant.Filled" Color="Color.Default" />
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    @Body
    <Footer></Footer>
    <CookieBanner/>
</MudLayout>

@code{
    private bool _isDarkMode = false;
}
