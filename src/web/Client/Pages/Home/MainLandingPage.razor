@page "/"
@using MudExtensions.Enums
@attribute [Layout(typeof(LandingPageLayout))]

@* DESKTOP *@

<MudHidden Breakpoint="Breakpoint.SmAndDown">

    <MudPage FullScreen="FullScreen.Full" Row="2" Column="5" Height="700px">

        <MudSection Row="1" ColSpan="2" Column="1" Class="hero-section-top">
            <MudImage Height="250" Src="/images/minimoeder_logo.png" />
        </MudSection>

        <MudSection Row="1" ColSpan="2" Column="4" Class="hero-section-top">
            <MudToolBar Style="@($"color: {JordnaerPalette.Header}; font-size: 24px; overflow: hidden")">
                <MudNavLink Href="/posts" Class="d-md-none d-lg-flex">OPSLAG</MudNavLink>
                <MudNavLink Href="/auth/login" Class="hero-navbar-underline">VÆR' MED</MudNavLink>
                <MudNavLink Href="/groups">GRUPPER</MudNavLink>
            </MudToolBar>
        </MudSection>

        <MudSection Row="2" Column="1" ColSpan="5" Style="@($"background: {JordnaerPalette.DimBackground}")" />

        <MudSection Row="1" Column="2" ColSpan="3" RowSpan="2" Class="hero-section-top">
            <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Spacing="0">
                <MudImage Height="400" Src="/images/landing-page/nathan-dumlao-P5MXtYfgmmw-unsplash_cropped.webp" />
                <MudText Class="font-cherry-bomb-one" Style="@($"color: {JordnaerPalette.Secondary}; font-size: 48px")">Velkommen</MudText>
                <MudText Style="@($"color: {JordnaerPalette.Header}; font-size: 24px")">Til dit online mødested for børnefamilier</MudText>
            </MudStack>
        </MudSection>

    </MudPage>

    <MudContainer MaxWidth="MaxWidth.Large">

        @* New Section 1: Legeaftale *@
        <div class="flex-row-reverse hero-section">
            <MudImage Src="/images/landing-page/fabian-centeno-uY60pJUHqOo-unsplash.jpg" Height="400" Class="ml-15" />
            <div class="content-section">
                <MudText Class="font-cherry-bomb-one" Style="@($"color: {JordnaerPalette.Primary}; font-size: 36px")">
                    Hvad kan jeg bruge Mini Møder til?
                </MudText>
                <MudText>
                    Mini Møder er et online fællesskab for børnefamilier. Her kan du:
                </MudText>
                <ul class="custom-list">
                    <li>Finde fællesskaber</li>
                    <li>Finde mødregrupper</li>
                    <li>Lave legeaftaler</li>
                    <li>Skrive med ligesindede</li>
                    <li>Udforske hjemmeskoling</li>
                    <li>Finde private dagplejere</li>
                    <li>Oprette din gruppe og finde nye medlemmer</li>
                    <li>Finde Sampasning</li>
                    <li>Finde andre til at dyrke lokal sport</li>
                </ul>
                <MudButton Href="/users" Variant="Variant.Filled">Find et mini møde</MudButton>
            </div>
        </div>


        <MiniDivider Color="MiniDividerColor.Red" Center />

        @* New Section 2: Find eller skab en gruppe i nærheden *@
        <div class="flex-row hero-section">
            <MudImage Src="images/landing-page/ryan-fields-Xz7MMD5tZwA-unsplash.jpg" Height="400" Class="mr-15" />
            <div>
                <MudText Class="font-cherry-bomb-one" Style="@($"color: {JordnaerPalette.Secondary}; font-size: 36px")">
                    Lokale Fællesskaber
                </MudText>
                <ul>
                    <li>
                        Find en legegruppe I kan være en del af, eller find nye medlemmer til jeres egen gruppe.
                    </li>
                    <li>
                        Slå dig sammen med andre forældre om legegruppe, privatdagpleje, hjemmeskole eller lignende.
                    </li>
                </ul>
                <MudButton Href="/groups" Variant="Variant.Filled">Gå til grupper</MudButton>
            </div>
        </div>

        <MiniDivider Color="MiniDividerColor.Yellow" Center />

    </MudContainer>

</MudHidden>


@* MOBILE *@
<MudHidden Breakpoint="Breakpoint.MdAndUp">

</MudHidden>
