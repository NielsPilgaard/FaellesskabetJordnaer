@*TODO: MudImage should be clickable, or have an overlay so we can add an image*@
<MudImage ObjectPosition="ObjectPosition.Center" ObjectFit="ObjectFit.Fill" Src="@ChildProfile.PictureUrl" Alt="@($"Picture of {ChildProfile.FirstName}")" />
<MudGrid>
    <MudItem xs="12" sm="6">
        <MudTextField For="() => ChildProfile.FirstName" @bind-Value="@ChildProfile.FirstName" Label="Fornavn" Variant="Variant.Text" InputType="InputType.Text" name="name" />
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudTextField For="() => ChildProfile.LastName" @bind-Value="@ChildProfile.LastName" Label="Efternavn" Variant="Variant.Text" InputType="InputType.Text" name="lastname" />
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudSelect For="() => ChildProfile.Gender" T="Gender" @bind-Value="ChildProfile.Gender" Label="Køn" Variant="Variant.Text" name="gender">
            @foreach (var gender in Enum.GetValues<Gender>())
            {
                <MudSelectItem T="Gender" Value="gender">@gender.GetDisplayName()</MudSelectItem>
            }
        </MudSelect>

    </MudItem>
    <MudItem xs="12" sm="6">
        <MudDatePicker @bind-Date="@ChildProfile.DateOfBirth"
                       OpenTo="OpenTo.Year"
                       PickerVariant="PickerVariant.Dialog"
                       AnchorOrigin="Origin.BottomLeft"
                       For="@(()=>ChildProfile.DateOfBirth)"
                       AdornmentColor="Color.Primary"
                       Color="Color.Primary"
                       Rounded
                       Placeholder="@DateTime.Now.ToString("d")"
                       Label="Fødselsdato" />
    </MudItem>
    <MudItem xs="12">
        <MudTextFieldExtended For="() => ChildProfile.Description" AutoSize Lines="3" Immediate @bind-Value="@ChildProfile.Description" Placeholder="Du kan eksempelvis fortælle om interesser, personlighed, drømme og udfordringer." Label="Beskrivelse" Variant="Variant.Text" InputType="InputType.Text" />
    </MudItem>
</MudGrid>
@code {
    [Parameter]
    public required UserProfile Parent { get; set; }

    [Parameter]
    public required ChildProfile ChildProfile { get; set; }
}
