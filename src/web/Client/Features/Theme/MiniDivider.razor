<MudImage Src="@Src" Alt="Dotted line" Class="@Class" Style="@Style" />

@code {
    [Parameter]
    public string? Class { get; set; }
    [Parameter]
    public string? Style { get; set; }
    [Parameter]
    public required MiniDividerColor Color { get; set; }

    private string Src => $"images/dotted-line-{Color.ToString().ToLower()}.png";
}
